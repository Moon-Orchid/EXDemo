<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ex9_3_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="所有联系人"
        android:textAlignment="center"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ex9_3_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="编号"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ex9_3_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="姓名"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ex9_3_tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电话"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ex9_3_tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ex9_3_tv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电子邮箱"
            android:textAlignment="center" />
    </LinearLayout>

    <ListView
        android:id="@+id/ex9_3_list_people"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>